{
    "packages":{
        "frontend-admin":{
            "type":"autoscaling",
            "apps":[ "frontend::front" ],
            "data":{
                "secondsToWait":1200,
                "port":18080,
                "healthcheckGrace":20,
                "bucket":"aws-frontend-artifacts",
                "healthcheck_paths":[
                    "/management/healthcheck"
                ]
            }
        },
        "admin":{
            "type":"autoscaling",
            "apps":[ "frontend::front" ],
            "data":{
                "secondsToWait":1200,
                "port":18080,
                "healthcheckGrace":20,
                "bucket":"aws-frontend-artifacts",
                "healthcheck_paths":[
                    "/management/healthcheck"
                ]
            }
        },
        "frontend-static":{
            "type":"aws-s3",
            "apps":[ "aws-s3" ],
            "data":{
                "bucket":"aws-frontend-static",
                "cacheControl":"public, max-age=315360000"
            }
        }
    },
    "recipes":{
        "default":{
            "depends" : ["staticFilesUpload", "artifactUpload", "deploy"]
        },
        "deploy":{
            "actionsBeforeApp": ["frontend-admin.deploy", "admin.deploy"]
        },
        "artifactUpload":{
            "actionsBeforeApp": ["frontend-admin.uploadArtifacts", "admin.uploadArtifacts"]
        },
        "staticFilesUpload":{
            "actionsBeforeApp": ["frontend-static.uploadStaticFiles"]
        }
    }
}